@model ProjectCoach.Models.Partido

<br /><br /><br /><br /><br /><br />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.CampeonatoID)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Jornada, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Jornada, new { htmlAttributes = new { @class = "form-control input-sm", @type = "number" } })
                @Html.ValidationMessageFor(model => model.Jornada, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control input-sm", @type = "date" } })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Ubicacion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Ubicacion, new { htmlAttributes = new { @class = "form-control input-sm" } })
                @Html.ValidationMessageFor(model => model.Ubicacion, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.Equipo1ID)

        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayFor(model => model.Equipo1.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Equipo2ID, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.Resultado1, new { htmlAttributes = new { @class = "form-control input-sm", @type = "number" } })
                @Html.ValidationMessageFor(model => model.Resultado1, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.Resultado2, new { htmlAttributes = new { @class = "form-control input-sm", @type = "number" } })
                @Html.ValidationMessageFor(model => model.Resultado2, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.DropDownList("Equipo2ID", null, htmlAttributes: new { @class = "form-control input-sm" })
                @Html.ValidationMessageFor(model => model.Equipo2ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

